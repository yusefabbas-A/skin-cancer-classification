<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/message_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:text="We are now processing your image we will be done after 6 hours max, please make sure to save your key in order to be able to access the your report later on"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/Date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/message_text"
            android:layout_margin="15dp"
            tools:text="Date"
            android:textSize="20sp" />


    </RelativeLayout>



</android.support.v7.widget.CardView>